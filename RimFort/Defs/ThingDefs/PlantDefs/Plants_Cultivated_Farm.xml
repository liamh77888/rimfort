<?xml version="1.0" encoding="utf-8" ?>
<Plants>

  <!--=========================== Food crops ==============================-->

  <ThingDef ParentName="PlantBase">
    <defName>PlantPlumpHelmet</defName>
    <label>plump helmet mushroom</label>
    <description>A very fast growing mushroom, that can be eaten.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Beauty>1</Beauty>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/PlumpHelmet</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>10</pathCost>
    <ingestible>
      <nutrition>0.30</nutrition>
    </ingestible>
    <plant>
			<fertilitySensitivity>0.8</fertilitySensitivity>
			<dieIfLeafless>true</dieIfLeafless>
			<reproduces>false</reproduces>
			<harvestTag>Standard</harvestTag>
			<harvestedThingDef>RawPlumpHelmet</harvestedThingDef>
			<harvestDestroys>true</harvestDestroys>
			<harvestYield>10</harvestYield>
			<sowTags>
				<li>Ground</li>
				<li>Hydroponic</li>
			</sowTags>
			<growMinGlow>0.01</growMinGlow>   <!-- IMPORTANT! this controls the light level needed for growing -->
			<!--  <growMaxGlow>0.1</growmaxGlow> doesnt work -->
			<topWindExposure>0.1</topWindExposure>
			<growDays>1</growDays>
			<visualSizeRange>
        <min>0.1</min>
        <max>1.05</max>
      </visualSizeRange>
    </plant>
  </ThingDef>


  <!--=========================== Production crops ==============================-->

